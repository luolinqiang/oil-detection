</script><script type='text/javascript'>
    $('#btn-submit').on('click',function(){
        var remark = $('#remark').val();
        var reqNum = $('#reqNum').val();
        var needDelivery = $('#needDelivery').is(':checked');
        if(remark == ''){
            messageAlert('请填写需求！');
            return;
        }
        if(reqNum == ''){
            messageAlert('请填写需求的数量！');
            return;
        }
        showLoading();
        $.ajax({
            url : Wei.up + '/req-submit' + Wei.us,
            type : 'POST',
            dataType : 'json',
            data : {
                remark : remark,
                reqNum : reqNum,
                needDelivery : needDelivery
            },
            success : function(data){
                if(data.success){
                    messageAlert('提交成功');
                    $('#form')[0].reset();
                }else{
                    messageAlert('提交失败:' + data.msg);
                }
            },
            error : function(){
                messageAlert('提交出错，请稍后再试。');
            },
            complete : function(){
                hideLoading();
            }
        });
    })
</script>
