    function loadRecommend(){
        $.ajax({
            type:'get',
            url:'/weisite/index-recommend.html',
            timeout:30000,
            data:{time:"3"},
            dataType:'json',
            success:function(data){
                $('#csbj div[data-recommend]').remove();
                $('#update_time div[time-recommend]').remove();
                if(data.length > 0){
                    for(var i = 0;i < data.length;i++){
                        var rec = data[i];
                        var div_time = $('<div>更新时间&nbsp;&nbsp;&nbsp;'+rec.updateTime+'</div>');
                        $('#update_time').html(div_time);
                        var div = $('<div class="am-g" data-recommend style="padding:0px 10px 0px 10px;"></div>');
                        $('<div class="am-u-sm-4 toe-1 recommend" style="font-size:12px;"><a href="/weisite/shop-' + rec.items[i].shop_id + '.html">' + rec.items[i].name + '</a></div>').appendTo(div);
                        $('<div class="am-u-sm-4 toe-1 recommend" style="font-size:12px;"><a href="/weisite/item-' + rec.items[i].item_id + '.html">' + rec.items[i].title + '</a></div>').appendTo(div);
                        $('<div class="am-u-sm-2 toe-1 recommend" style="font-size:12px;">' + rec.items[i].address+ '</div>').appendTo(div);
                        $('<div class="am-u-sm-2 toe-1 recommend" style="font-size:12px;color:red;">' + rec.items[i].price + '</div>').appendTo(div);
                        $('#csbj').append(div);
                    }
                }else{
                    var div_time = $('<div>更新时间&nbsp;&nbsp;&nbsp;</div>');
                    $('#update_time').html(div_time);
                    $('#csbj').append('<div class="am-g" data-recommend style="padding:0px 10px 0px 10px;"><div class="am-u-sm-12">无厂商最新报价...</div></div>');
                }

            },
            error:function(){
                console.log('error');
            }
        });
    }
</script>